{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "Node16",
        "baseUrl": "./",
        "paths": {
            "#lib/*": ["./src/lib/*"],
            "#files/*": ["./src/files/*"],
            "#controllers/*": ["src/controllers/*"],
            "#constants/*": ["./src/constants/*"],
            "#routes/*": ["./src/routes/*"],
            "#public/*": ["./src/public/*"],
            "#utils/*": ["./src/utils/*"],
            "#views/*": ["./src/views/*"],
            "#config/*": ["./src/config/*"],
            "#errors/*": ["./src/errors/*"],
            "#schemas/*": ["./src/schemas/*"],
            "#dao/*": ["./src/dao/*"],
            "#services/*": ["./src/services/*"],
            "#repositories/*": ["./src/repositories/*"],
            "#dto/*": ["./src/dto/*"],
            "#test/*": ["./src/test/*"],
            "#docs/*": ["./src/docs/*"]
        }
    }
}
